#!/usr/bin/env ruby

require 'black_sky'
require 'rack/cors'
require 'sinatra'

use Rack::Cors do
  allow do
    origins '*'
    resource '*', headers: :any, methods: %w(get post options)
  end
end

configure do
  set :port, ENV['PORT'] || '5555'
  set :bind, '0.0.0.0'
  set :public_folder, File.join(File.dirname(__FILE__), '../static')
end

black_sky = BlackSky::Downloader.new(ENV['BLACK_SKY_STORAGE_PATH'] || ".")

get '/index' do
  black_sky.all.to_json
end

post '/push' do
  h = JSON.parse(request.body.read)
  black_sky.download(h["name"], h["url"], h["header"] || {})
end

post '/cancel' do
  h = JSON.parse(request.body.read)
  black_sky.cancel(h["key"])
end
